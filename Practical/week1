#include <stdio.h>

int main()
{
    int n;
  int array[n], key,i;

  printf("Enter nos. of elements in array\n");
  scanf("%d", &n);

  printf("Enter %d value(s)\n", n);

  for (i = 0; i < n; i++)
    scanf("%d", &array[i]);

  printf("Enter a number to find\n");
  scanf("%d", &key);

  for (i = 0; i < n; i++)
  {
    if (array[i] == key) 
    {
      printf("%d is present at index %d.\n", key, i);
      printf("no. of comparisions are %d", i+1);
      break;
    }
  }
  if (i == n)
  {
    printf("%d isn't present in your array.\n", key);
    printf("no. of comparisions are %d", n);
  }
  return 0;
}
